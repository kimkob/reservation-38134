<h1>トップページ</h1>

<% if user_signed_in?%>
  <%= current_user.email%>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<% else %>
  <h2>ログインしていません</h2>
  <%= link_to "新規登録", new_user_registration_path %>
  <%= link_to "メールアドレスで登録", new_user_registration_path%>
  <%= link_to "ログイン", new_user_session_path %><br>
  <%= link_to image_tag("btn_google.png"), user_google_oauth2_omniauth_authorize_path, method: :post%><br />

<% end %>


<%= month_calendar do |date| %>
  <%= date.day %>
<% end %>


